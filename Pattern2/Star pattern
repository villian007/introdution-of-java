import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
	Scanner s=new Scanner(System.in);

	int n= s.nextInt();
	    int i=1;
		while(i<=n) {
		int spaces=1;
		while(spaces<=n-i) {
			System.out.print(' ');
			spaces=spaces+1;

		}
		int stars=1;
		while(stars<=i) {
			System.out.print("*");
			stars =stars+1;

		}
		int decno =i-1;
		while (decno>=1) {
			System.out.print("*");
			decno=decno-1;
		}

		System.out.println();
		i=i+1;
		
		}
	}

}

		

