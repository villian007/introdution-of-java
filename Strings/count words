
public class Solution {

	public static int countWords(String str) {	
     
        if(str.length()==0){
			return 0;
		}	
        int count=0;
        for (int i=0;i<str.length();i++)
        {
            if (str.charAt(i) == ' ')
            {
                count++;
            }
        }
        
        //System.out.println(count+1);
        return (count+1);

	}
}
	
